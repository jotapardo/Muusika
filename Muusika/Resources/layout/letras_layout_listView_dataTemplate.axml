<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:id="@+id/LetrasListItem_LinearLayout"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id = "@+id/LetraImageView"
                    android:src = "@drawable/img_equalizer" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id = "@+id/CheckImageView"
                    android:src = "@drawable/ic_action_check" 
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorAccent"
                    android:visibility="invisible"
                />
                
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">
            <TextView
                android:text="TÃ­tulo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TituloTextView" />
            <TextView
                android:text="Artista"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ArtistaTextView" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:layout_gravity="right"
            android:padding="10dp">
            <TextView
                android:text="Album"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AlbumTextView"
                android:layout_gravity="right" />
            <TextView
                android:text="Adjuntos"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AdjuntosTextView"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>