<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/linearLayout1" >
	<android.support.v7.widget.Toolbar
		android:minHeight="?android:attr/actionBarSize"
		android:background="?android:attr/colorPrimary"
		android:minWidth="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/letras_attach_toolbar"
		android:title="@string/Attach" />
    
    
	
	<GridLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/gridLayout1"
		android:rowCount="2"
		android:columnCount="3"
        android:padding="10dp"
       >

		<ImageButton
			android:src="@drawable/img_music"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/audio_imageButton"
			android:tag="Audio"
			android:layout_gravity="left|top"
			android:scaleType="centerInside" 
            
        />
        
        <ImageButton
            android:src="@drawable/img_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_imageButton"
            android:tag="Image"
            android:layout_gravity="left|top"
            android:scaleType="centerInside" />
        
        <ImageButton
            android:src="@drawable/img_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/videoWeb_imageButton"
            android:tag="VideoWeb"
            android:layout_gravity="left|top"
            android:scaleType="centerInside" />
        
    </GridLayout>
	<ImageView
		android:src="@android:drawable/ic_menu_gallery"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/imageView1" 
        android:padding = "20dp"
        android:visibility="invisible"
    />
	<android.webkit.WebView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/webView1" />
    
    
</LinearLayout>